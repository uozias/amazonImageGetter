<Window x:Class="AmazonImageGetter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmazonImageGetter"
        mc:Ignorable="d"
        Title="AsinTo画像" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="Asin欄" FontSize="12" Margin="10,11,9.333,275.667"  />
        <Button 
            Name="goButton"
            Grid.Column="0" 
            FontSize="12"
            Content="取得" Margin="188,10,10.333,280.667" />
        <TextBox  Name="asinInput"
           Grid.Column="0"  HorizontalAlignment="Left" Height="30" Margin="10,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>

        <TextBlock Grid.Column="1" Text="結果" FontSize="12" Margin="9.667,11,-0.333,275.667" />
        <TextBlock Grid.Column="1" Name="resultArea" Text="" FontSize="18" Margin="10.667,45,-1.333,9.667" />
    </Grid>

</Window>
